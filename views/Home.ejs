<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
   <style>
    /* Base styles */
body {
  background-color: #ffffff;
  color: #000000;
  font-family: 'Arial', sans-serif;
  margin: 0;
  padding: 0;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

#container {
  background-color: #f5f5f5;
  padding: 2rem;
  border-radius: 1rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  width: 90%;
  max-width: 500px;
  transition: all 0.3s ease;
}

.theme-toggle-container {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 1rem;
}

#themeToggle {
  padding: 0.5rem 1rem;
  border: none;
  border-radius: 0.5rem;
  cursor: pointer;
  font-size: 0.9rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  transition: all 0.3s ease;
  background-color: #f5f5f5;
}

#title {
  text-align: center;
  color: #000000;
  margin-bottom: 2rem;
  font-size: 2.5rem;
  text-transform: uppercase;
  letter-spacing: 2px;
  transition: all 0.3s ease;
}

#formContainer {
  background-color: #ffffff;
  padding: 2rem;
  border-radius: 0.5rem;
  transition: all 0.3s ease;
}

form {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

#label {
  font-size: 1.1rem;
  margin-bottom: 0.5rem;
  transition: all 0.3s ease;
}

#urlInput {
  padding: 1rem;
  border: 1px solid #e0e0e0;
  border-radius: 0.5rem;
  background-color: #ffffff;
  color: #000000;
  font-size: 1rem;
  outline: none;
  transition: all 0.3s ease;
}

#urlInput:focus {
  box-shadow: 0 0 0 2px #2196F3;
}

#submitButton {
  background-color: #2196F3;
  color: white;
  padding: 1rem;
  border: none;
  border-radius: 0.5rem;
  font-size: 1.1rem;
  cursor: pointer;
  transition: all 0.3s ease;
  margin-top: 1rem;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-weight: bold;
}

#submitButton:hover {
  background-color: #1976D2;
}

#themeToggle:hover {
  background-color: #e0e0e0;
}

/* Dark Mode Styles */
body.dark-mode {
  background-color: #000000;
  color: #ffffff;
}

.dark-mode #container {
  background-color: #111111;
  box-shadow: 0 4px 6px rgba(255, 255, 255, 0.1);
}

.dark-mode #formContainer {
  background-color: #1a1a1a;
}

.dark-mode #title {
  color: #ffffff;
}

.dark-mode #label {
  color: #ffffff;
}

.dark-mode #urlInput {
  background-color: #000000;
  color: #ffffff;
  border: 1px solid #333333;
}

.dark-mode #urlInput:focus {
  box-shadow: 0 0 0 2px #ffffff;
}

.dark-mode #themeToggle {
  background-color: #333333;
  color: #ffffff;
}

.dark-mode #themeToggle:hover {
  background-color: #444444;
}
table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
    font-size: 18px;
    text-align: left;
    overflow: hidden; /* Added overflow: hidden to the table */
    height: 60px;
}

/* Add a wrapper div around the table for scrolling */
.table-wrapper {
  height: 160px;
  padding: 10px;
    overflow-x:scroll;
    overflow-y: scroll;
}

th, td {
    border: 1px solid #dddddd;
    padding: 8px;
    text-align: center;
}

table thead th {
    font-weight: bold;
    text-transform: uppercase;
}

tbody td {
    padding: 12px;
    border: 1px solid #ddd;
    text-align: left;
    vertical-align: middle;
}
   </style>
  </head>
  <body id="body">
    <div id="container">
      <div class="theme-toggle-container">
        <button onclick="toggleTheme()" id="themeToggle">
          üåô Dark Mode
        </button>
      </div>

      <h1 id="title">URL Shortener</h1>
      <% if(locals.id){ %>
        <p>URL Generated :http://localhost:4000/url/<%= id %></p>
        <%  } %>
      <div id="formContainer">
        <form method="post" action="/url">
          <label id="label">Enter your Original URL:</label>
          <input type="text" 
                 name="url" 
                 placeholder="https://example.com" 
                 id="urlInput">
          <button type="submit" id="submitButton">Generate Short URL</button>
        </form>
      </div>
      <% if(locals.urls) { %>
        <div class="table-wrapper">
          <table>
            <thead>
              <th>S. No</th>
              <th> ShortID</th>
              <th>Redirect</th>
              <th>Clicks</th>
            </thead>
            <tbody>
              <% urls.forEach((url,index) => { %>
                <tr> <td><%= index +1 %></td>
                <td><%= url.shortId %></td>
                <td><%= url.redirectURL %></td>
                <td> <%= url.visitHistory.length %></td></tr>
               
            <%  }) %>
           
          </table>
      </div>
      <%}%>
    </div>

    <script>
      let isDarkMode = false;
      const body = document.getElementById('body');
      const container = document.getElementById('container');
      const formContainer = document.getElementById('formContainer');
      const title = document.getElementById('title');
      const label = document.getElementById('label');
      const urlInput = document.getElementById('urlInput');
      const submitButton = document.getElementById('submitButton');
      const themeToggle = document.getElementById('themeToggle');

      function toggleTheme() {
        isDarkMode = !isDarkMode;
        document.body.classList.toggle('dark-mode');
        themeToggle.textContent = isDarkMode ? '‚òÄÔ∏è Light Mode' : 'üåô Dark Mode';
      }
    </script>
  </body>
</html>